//save as "md_hash.yar" on the directory C:\your\directory\to\YARA\custom-signatures\yara

import "hash"

rule REALNOTEPAD {
	
	meta:
		description = "MALWARE DETECTION"

	condition:
		uint16(0) == 0x5A4D	and
		filesize < 30MB and
		hash.md5(0, filesize) == "4A162F4587B5BB1161ECDF6F03A332A7"
		hash.md5(0, filesize) == "c29f728db90d9a1ac842288776e6d13e"
		hash.md5(0, filesize) == "f892d9371b459567585af9b11c88190c"
}
